{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('app_mug_new') }}" class="btn btn-default">Ajout</a>

    {% if entities %}
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for mug in entities %}
            <tr>
                <td>{{ mug.name }}</td>
                <td>{{ mug.stock|number_format(0, ',', '.') }}</td>
                <td>
                    <a href="{{ path('app_mug_show', {id: mug.id}) }}">Details</a>
                    <a href="{{ path('app_mug_edit', {id: mug.id}) }}">Edit</a>
                    <form action="{{ path('app_mug_delete', {id: mug.id}) }}" method="POST">
                        <input type="hidden" name="method" value="DELETE">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <p class="error">Pas de donn√©es</p>
    {% endif %}
{% endblock %}
